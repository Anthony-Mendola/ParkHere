<div class="post-banner"></div>
<div class="container">
  <h1> All Listings</h1>
<%= form_tag listings_path, :method => 'get', class: 'navbar-form navbar-left' do%>
    <div class='form-group'>
      <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search' %>
    </div>
    <%= submit_tag "Search", :name => nil, class: 'btn btn-default' %>
  <% end %>
</div>


<% @listings.each_slice(3) do |listings| %>
  <div class="row">

    <% listings.each do |listing| %>
      <div class="col-lg">

        <div class="listing-box">
          <%= link_to listing_path(listing) do %>
            <div class="listing-box-title">
              <p><%= listing.title %></p>
            </div>
            <div class="listing-box-image-wrapper">
              <%= image_tag listing.image.url(:medium), class: 'listing-box-image rounded' %>
            </div>
          <% end %>
        </div>

      </div>
    <% end %>

  </div>
<% end %>

<% if request.path != '/all' %>
  <div class='text-center'>
    <%= link_to 'View all listings', all_listings_path %>
  </div>
<% end %>
