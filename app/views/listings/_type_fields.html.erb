<div class="nested-fields">
  <div class="form-row">
    <div class="col-auto">
      <%= f.text_field :length, placeholder: 'Length in inches', class: 'form-control' %>
    </div>
    <div class="col-auto">
      <%= f.text_field :name, placeholder: ' Type name', class: 'form-control' %>
    </div>
    <div class="col-auto">
      <%= link_to_remove_association "remove", f, class: 'btn btn-outline-danger' %>
    </div>
  </div>
</div>
